<h1 class="mb-5">My tasks</h1>

<ul class="list-unstyled pl-4">
  <% @tasks.each do |task| %>
  <li>
    <input type="checkbox" <%= "checked" if task.completed %>>
    <%= link_to task.title, task_path(id: task.id) %>
    <%= link_to raw('<i class="fa fa-trash" aria-hidden="true"></i>'), destroy_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ul>

<%= link_to "Create task", tasks_new_path, class: "btn btn-primary mx-4" %>