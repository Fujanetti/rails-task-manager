<h1 class="mb-5">Create New Task</h1>

<div class="form-container mx-4">
  <%= simple_form_for(@task) do |f| %>
    <%= f.input :title %>
    <%= f.input :details %>
    <%= f.hidden_field :completed%>
    <%= f.submit class: "btn btn-primary"%>
  <% end %>
</div>

<div class="my-4">
  <%= link_to "Back", tasks_path, class: "btn btn-primary mx-4" %>
</div>